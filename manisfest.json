{
    "name": ": phress",
    "description": "Feed - experimental - extension chrome",
    "manifest_version": 2,
    "version": "1",

    "permissions":
    [
        "<all_urls>",
        "tabs",
        "experimental",
        "contextMenus",
        "notifications",
        "webNavigation"
    ],

    "web_accessible_resources":
    [
        "ico_16.png"
    ],

    "content_scripts":
    [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "js": ["content_scripts.js"]
        }
    ],

    "browser_action":
    {
        "default_icon": "ico_16.png",
        "default_title": "Mostrar feeds"
    },

    "icons":
    {
        "16": "ico_16.png",
        "16": "ico_16_active.png"
    },

    "background":
    {
        "scripts": [  "background.js", "jquery.min.js" ]
    }
}